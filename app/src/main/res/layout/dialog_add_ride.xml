<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreenActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_alignParentBottom="false"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="382dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/add_ride_txv_from"
            android:id="@+id/item_new_ride_from"
            android:layout_margin="2dp"
            android:textSize="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_new_ride_from"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:textSize="15dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/add_ride_txv_to"
            android:id="@+id/item_new_ride_to"
            android:layout_margin="2dp"
            android:textSize="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_new_ride_to"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:textSize="15dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/add_ride_txv_date_start"
            android:id="@+id/item_start_date_ride"
            android:textSize="15dp"
            android:layout_margin="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_start_date_ride"
            android:layout_gravity="center_horizontal"
            android:editable="false"
            android:layout_margin="1dp"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/add_ride_txv_date_end"
            android:id="@+id/item_end_date_ride"
            android:textSize="15dp"
            android:layout_margin="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_end_date_ride"
            android:layout_gravity="center_horizontal"
            android:editable="false"
            android:layout_margin="1dp"
            android:textIsSelectable="false"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/item_cost_ride"
            android:text="@string/add_ride_txv_cost"
            android:textSize="15dp"
            android:layout_margin="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_cost_ride"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:inputType="numberDecimal"
            android:textSize="15dp"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/add_ride_txv_time_travel"
            android:id="@+id/item_time_travel"
            android:textSize="16dp"
            android:layout_margin="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_time_travel"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:inputType="number"
            android:textSize="15dp"
            android:gravity="right"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/add_ride_txv_typ_transport"
            android:id="@+id/item_typ_transport"
            android:layout_margin="2dp"
            android:textSize="16dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_typ_transport"
            android:spinnerMode="dialog"
            android:layout_margin="1dp"
            android:layout_gravity="right" />

    </LinearLayout>

    <Button
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:text="DODAJ"
        android:id="@+id/dialog_newride_btn_confirm"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

</RelativeLayout>